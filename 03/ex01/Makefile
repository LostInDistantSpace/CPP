# ---------------------------------------------------------------------------- #
#                                  VARIABLES                                   #
# ---------------------------------------------------------------------------- #

NAME			:=	claptrap

# ---------------------------------- PROGRAM --------------------------------- #

SRC				:=	main.cpp
SRC				+=	ClapTrap.cpp

OBJS			:=	$(SRC:.cpp=.o)

# --------------------------------- COMMANDS --------------------------------- #

CXX				:=	c++
RM				:=	/bin/rm -rf

# ----------------------------------- FLAGS ---------------------------------- #

CXXFLAGS		:=	-std=c++98
CXXFLAGS		+=	-Wall
CXXFLAGS		+=	-Wextra
CXXFLAGS		+=	-Werror

# ---------------------------------------------------------------------------- #
#                                    RULES                                     #
# ---------------------------------------------------------------------------- #

all:				$(NAME)

$(NAME): $(OBJS)
					$(CXX) $(CXXFLAGS) $(OBJS) -o $(NAME)

%.o:%.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
					$(RM) $(OBJS)

fclean:				clean
					$(RM) $(NAME)

re:					fclean all

.PHONY:				all debug clean nomsg fclean re
