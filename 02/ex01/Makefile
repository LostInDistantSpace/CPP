# ---------------------------------------------------------------------------- #
#                                  VARIABLES                                   #
# ---------------------------------------------------------------------------- #

NAME			:=	fixed

# ---------------------------------- PROGRAM --------------------------------- #

SRC				:=	main.cpp
SRC				+=	Fixed.cpp

OBJS				:=	$(SRC:.cpp=.o)

# --------------------------------- COMMANDS --------------------------------- #

CXX				:=	c++
RM				:=	/bin/rm -rf

# ----------------------------------- FLAGS ---------------------------------- #

CPPFLAGS		:=	-std=c++98
CPPFLAGS		+=	-Wall
CPPFLAGS		+=	-Wextra
CPPFLAGS		+=	-Werror

# ---------------------------------------------------------------------------- #
#                                    RULES                                     #
# ---------------------------------------------------------------------------- #

all:				$(NAME)

$(NAME): $(OBJS)
					$(CXX) $(CPPFLAGS) $(OBJS) -o $(NAME)

%.o:%.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
					$(RM) $(OBJS)

fclean:				clean
					$(RM) $(NAME)

re:					fclean all

.PHONY:				all debug clean fclean re
